# -*- coding: utf-8 -*-
from Tkinter import *
import serial
import time

root = Tk()
prompt = "Press a key"
arduino = serial.Serial('/dev/ttyUSB0', 9600)
header = '~'

if True:
    print arduino.readline()

x = '0'
y = '0'

def sendData(data):
    arduino.write(header)
    arduino.write(data)
    arduino.write(header)


class App:
    def __init__(self, master):
        frame = Frame(master, width=800, height=300)
        frame.pack()

        self.button = Button(frame, text="Quit", command=frame.quit)
        self.button.pack(side=LEFT)

        self.hello = Button(frame, text="Hello", command=self.say_hello)
        self.hello.pack(side=LEFT)

        self.labell = Label(frame, text=prompt)
        self.labell.pack(side=RIGHT)

        self.duino = Label(frame, text=arduino.readline())
        self.duino.pack(side=RIGHT)

    def say_hello(self):
        print "Hello world!"

someApp = App(root)

def key(event):
    if event.char == event.keysym:
        msg = "Normal Key %r" % event.char
    elif len(event.char) == 1:
        msg = "Punctuation Key %r (%r)" % (event.keysym, event.char)
    else:
        msg = "Special Key %r" % event.keysym
    someApp.labell.config(text=msg)
    #someApp.arduino.config(text=arduino.readline())
    sendData(msg)

root.bind_all("<Key>", key)
root.mainloop()




